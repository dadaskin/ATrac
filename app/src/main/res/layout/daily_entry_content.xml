<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.adaskin.android.atrac.DailyEntryActivity"
    tools:showIn="@layout/activity_daily_entry">

        <TextView
            android:id="@+id/dateView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/fab_margin"
            android:layout_marginEnd="@dimen/fab_margin"
            android:layout_marginTop="@dimen/fab_margin"
            android:text="Wednesday, 24 May 2017"
            android:textSize="30sp"
            android:paddingTop="@dimen/fab_margin"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
        />

        <Button
            android:id="@+id/actionButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:paddingTop="@dimen/fab_margin"
            android:paddingBottom="15sp"
            android:paddingLeft="25sp"
            android:paddingRight="25sp"
            android:text="Action"
            android:textAlignment="center"
            android:textSize="30sp"
            android:textColor="#ff000000"
            android:background="#5f00ff00"
            app:layout_constraintTop_toBottomOf="@+id/dateView"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
        />

        <TextView
            android:id="@+id/startLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/start_separator_margin"
            android:layout_marginStart="@dimen/label_left_margin"
            android:text="Start:"
            android:textSize="30sp"
            app:layout_constraintTop_toBottomOf="@+id/actionButton"
            app:layout_constraintLeft_toLeftOf="parent"
         />

        <TextView
            android:id="@+id/startHours"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/hours_right_margin"
            android:text="07:45"
            android:textSize="30sp"
            app:layout_constraintTop_toTopOf="@+id/startLabel"
            app:layout_constraintBottom_toBottomOf="@+id/startLabel"
            app:layout_constraintRight_toRightOf="parent"
        />

        <TextView
            android:id="@+id/lunchLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/fab_margin"
            android:layout_marginStart="@dimen/label_left_margin"
            android:text="Lunch:"
            android:textSize="30sp"
            app:layout_constraintTop_toBottomOf="@+id/startLabel"
            app:layout_constraintLeft_toLeftOf="parent"
        />

        <TextView
            android:id="@+id/lunchHours"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/hours_right_margin"
            android:text="12:10"
            android:textSize="30sp"
            app:layout_constraintTop_toTopOf="@+id/lunchLabel"
            app:layout_constraintBottom_toBottomOf="@+id/lunchLabel"
            app:layout_constraintRight_toRightOf="parent"
        />

        <TextView
            android:id="@+id/returnLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/fab_margin"
            android:layout_marginStart="@dimen/label_left_margin"
            android:text="Return:"
            android:textSize="30sp"
            app:layout_constraintTop_toBottomOf="@+id/lunchLabel"
            app:layout_constraintLeft_toLeftOf="parent"
        />

        <TextView
            android:id="@+id/returnHours"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/hours_right_margin"
            android:text="13:20"
            android:textSize="30sp"
            app:layout_constraintTop_toTopOf="@+id/returnLabel"
            app:layout_constraintBottom_toBottomOf="@+id/returnLabel"
            app:layout_constraintRight_toRightOf="parent"
        />

        <TextView
            android:id="@+id/stopLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/fab_margin"
            android:layout_marginStart="@dimen/label_left_margin"
            android:text="Stop:"
            android:textSize="30sp"
            app:layout_constraintTop_toBottomOf="@+id/returnLabel"
            app:layout_constraintLeft_toLeftOf="parent"
        />

        <TextView
            android:id="@+id/stopHours"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/hours_right_margin"
            android:text="17:26"
            android:textSize="30sp"
            app:layout_constraintTop_toTopOf="@+id/stopLabel"
            app:layout_constraintBottom_toBottomOf="@+id/stopLabel"
            app:layout_constraintRight_toRightOf="parent"
        />

        <TextView
            android:id="@+id/totalLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/total_separator_margin"
            android:layout_marginStart="@dimen/total_left_margin"
            android:text="Total:"
            android:textSize="30sp"
            app:layout_constraintTop_toBottomOf="@+id/returnLabel"
            app:layout_constraintLeft_toLeftOf="parent"
        />

        <TextView
            android:id="@+id/totalHours"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/total_right_margin"
            android:text="8.52"
            android:textSize="30sp"
            app:layout_constraintTop_toTopOf="@+id/totalLabel"
            app:layout_constraintBottom_toBottomOf="@+id/totalLabel"
            app:layout_constraintRight_toRightOf="parent"
        />

        <Button
            android:id="@+id/changeView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:text="Weekly View"
            android:textAlignment="center"
            android:textSize="20sp"
            android:textColor="#ff000000"
            android:background="#5f00ff00"
            android:paddingTop="10sp"
            android:paddingBottom="10sp"
            android:paddingLeft="25sp"
            android:paddingRight="25sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/totalLabel"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            />

</android.support.constraint.ConstraintLayout>


